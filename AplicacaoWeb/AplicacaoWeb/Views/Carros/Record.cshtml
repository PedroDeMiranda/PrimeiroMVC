@using AplicacaoWeb.Models.Carros
@model CarroModel


<div>
    <h2>Carro</h2>

    <form asp-controller="Carros" asp-action="Save" method="post">
        <input type="hidden" asp-for="Id">
        <div class="form-group">
            <label>Modelo</label>
            <input type="text" class="form-label" id="modelo" asp-for="Modelo">
        </div>

        <div class="form-group">
            <label>Placa</label>
            <input type="text" class="form-label" id="placa" asp-for="Placa">
        </div>

        <div class="form-group">
            <label>Ano</label>
            <input type="number" class="form-label" id="ano" asp-for="Ano">
        </div>

        <button type="submit" class="btn btn-primary float-end m-1">Salvar</button>
        <a type="button" class="btn btn-secondary float-end m-1" asp-controller="Pranchas" asp-action="Index">Voltar</a>
    </form>
</div>
